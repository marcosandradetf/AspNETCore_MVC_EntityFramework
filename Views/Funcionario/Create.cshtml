@model InfnetMVC.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<br />
<div>
    <h1 class="h2 text-center">Inserir Funcionario</h1>
</div>
<hr />
<br />

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating">
                <input type="text" class="form-control" id="Nome" asp-for="Nome">
                <label asp-for="Nome"></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Endereco" class="form-control" />
                <label asp-for="Endereco" class="form-label"></label>
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="tel" asp-for="Telefone" id="telefone" class="form-control" pattern="[0-9]{11}" maxlength="11" />
                <label asp-for="Telefone" class="form-label"></label>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="email" asp-for="Email" class="form-control" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="date" asp-for="DataDeNascimento" class="form-control" />
                <label asp-for="DataDeNascimento" class="form-label">Data de Nascimento</label>
                <span asp-validation-for="DataDeNascimento" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="DepartamentoId" class="form-select" asp-items="ViewBag.DepartamentoId"></select>
                <label asp-for="DepartamentoId" class="form-label">Departamento</label>
                <span asp-validation-for="DepartamentoId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group d-grid gap-2">
                <input type="submit" value="Inserir" class="btn btn-success" />
            </div>
            <div class="form-group d-grid gap-2">
                <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('telefone').addEventListener('input', function (event) {
        var input = event.target.value;
        var digits = input.replace(/\D/g, ''); // Remove caracteres não numéricos
        event.target.value = digits.slice(0, 11); // Limita a 11 dígitos
    });
</script>


@model InfnetMVC.Models.Funcionario

@{
    ViewData["Title"] = "Delete";
}

<br />
<h1 class="h2">Exclusão de funcionário</h1>

<h3 class="h5">Tem certeza de que deseja excluir?</h3>
<div>
    <br />
    <hr/>
    <h4 class="h6">Funcionarios</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departamento.Nome)
            -
            @Html.DisplayFor(model => model.Departamento.Local)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="btn-group">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Excluir" class="btn btn-danger btn-sm"/>
            <a asp-action="Index" class="btn btn-outline-primary btn-sm">Voltar</a>
        </div>
    </form>
</div>
